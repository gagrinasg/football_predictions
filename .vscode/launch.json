{
    // Note: Important Info
    // 1. my main python code file name is app.py
    // 2. My app.py location is at the root (not inside any folder)
    // 3. My Python 3.9 runtime has all required packages..
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug - Python - Fastapi",
            "module": "uvicorn",
            "type": "python",
            "request": "launch",
            "args": [
                "app.main:app",
                "--reload",
                "--port",
                "8000"
            ],
            "env": {
                "usersecret": "some$Ecret"
            }
        },
        {
            "name": "Docker: Python - Fastapi",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "fastapi"
            }
        }
    ]
}