{
    "version": "0.2.0",
    "configurations": [
        // This config must be run from vs outside the container
        {
            "name": "Attach to UVicorn",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true,  // Adjust the port number as needed
        }
    ]
}
